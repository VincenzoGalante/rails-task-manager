<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li><%= link_to task.title, detail_path(task) %>
    | <%= link_to "Edit", edit_tasks_path(task.id) %>
    | <%= link_to "Delete", destroy_tasks_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>
